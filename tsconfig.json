{
  "compilerOptions": {
    "strict": true,
    "target": "es2023",
    "module": "Node16",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./dist"
  },
  "file": ["src"],
  "exclude": ["node_modules"]
}
